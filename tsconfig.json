{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2017", "ES2018", "ES2019", "ES2020", "DOM"],
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
